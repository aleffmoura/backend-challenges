<UserControl x:Class="Totten.Solutions.WolfMonitor.WpfApp.Screens.Archives.ArchivesCreateUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Totten.Solutions.WolfMonitor.WpfApp.Screens.Archives"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" FontFamily="Poppins">
    <Grid Width="auto" Margin="20">
        <StackPanel VerticalAlignment="Top" Margin="5">
            <TextBox Foreground="White" Name="txtDisplayName" materialDesign:HintAssist.Hint="Nome de exibição" Style="{StaticResource MaterialDesignFloatingHintTextBox}"  FontSize="18"/>
            <TextBox Foreground="White" Name="txtName" materialDesign:HintAssist.Hint="Nome completo com extensão" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="18"/>
        </StackPanel>

    </Grid>
</UserControl>
