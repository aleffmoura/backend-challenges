<UserControl x:Class="Totten.Solutions.WolfMonitor.WpfApp.Screens.Passwords.ChangePasswordUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Totten.Solutions.WolfMonitor.WpfApp.Screens.Passwords"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="400" Width="450" Background="#181818">
    <Grid>
        <StackPanel Margin="10">
            <PasswordBox Foreground="White" Name="txtPass" materialDesign:HintAssist.Hint="Nova Senha" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" FontSize="18" PasswordChanged="textChanged"/>
            <Label x:Name="lblError" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Red" FontSize="11" Margin="0,1,0,5" />

            <PasswordBox Foreground="White" Name="txtRepass" materialDesign:HintAssist.Hint="Repita nova senha" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" FontSize="18" PasswordChanged="textChanged" />
        </StackPanel>
    </Grid>
</UserControl>
